{
  "name": "glint-js-kit",
  "version": "0.8.0",
  "description": "Library for easier development with Glint.js. It is supposed to be added as a dependency in devDependencies key in package.json.",
  "main": "index.js",
  "type": "module",
  "dependencies": {
    "axios": "^1.6.0",
    "chai": "^6.2.2",
    "dotenv": "^16.3.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.3",
    "winston": "^3.8.0",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0"
  },
  "bin": {
    "glint": "src/scripts/glint-cli.js"
  },
  "scripts": {
    "scan": "npm audit",
    "analyze": "eslint src test",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=unit",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=integration"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {},
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/cascade/**/*.js",
      "!src/cascade/types.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MacHonzee/glint-js-kit.git"
  },
  "keywords": [
    "glintjs",
    "jest",
    "developmentKit",
    "eslint"
  ],
  "author": "Jan Rudolf",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MacHonzee/glint-js-kit/issues"
  },
  "homepage": "https://github.com/MacHonzee/glint-js-kit#readme"
}
